      <section id="main-content">
          <section class="wrapper">
<% var food = meals.find(meal => meal.shareID == foodEntity.foodID); %>

<% if(food === undefined) { %>
    No data found for <%= foodEntity.foodID %>. <a href="/addmeal">Go back and add it</a>
<% } else if(edit == true) { %>

<form action="/updateMeal" method="post" name="meal">

    <h1> Nutrition facts for <%= food.name %></h1>
    <input name="meal" value="<%= food.shareID %>" hidden>
    <p>Serving size : <%= food.servingSize %><%= food.servingSizeUnit %></p>
    <p><strong>Amount per : <input type="text" name="serving" value="<%= food.serving %>" size="1" maxlength="1" id="serving"> serving</strong></p>
    <p><strong>Calories </strong><label id="calVal" name="<%- food.calories %>"><input type="text" name="calories" value="<%= food.calories %>" size="6" maxlength="6" id="calories"></label></p>
    <p><strong>Proteins </strong><label id="protVal" name="<%- food.proteins %>"><input type="text" name="proteins" value="<%= food.proteins %>" size="6" maxlength="6" id="proteins"></label></p>
    <p><strong>Carbohydrates </strong><label id="carVal" name="<%- food.carbs %>"><input type="text" name="carbs" value="<%= food.carbs %>" size="6" maxlength="6" id="carbs"></label></p>
    <p><strong>Fats </strong><label id="fatVal" name="<%- food.fats %>"><input type="text" name="fats" value="<%= food.fats %>" size="6" maxlength="6" id="fats"></label></p>
    
    <button name="addMeal" type="submit" class="btn btn-primary btn-block">Save changes</button>

</form>
<script src="http://code.jquery.com/jquery-3.1.0.min.js"></script>
<script>
    $('#serving').keyup(function() {
        updateAllServingsValue();
});

function updateAllServingsValue() {
    updateServingsValue('#calories', '#calVal');
    updateServingsValue('#proteins', '#protVal');
    updateServingsValue('#carbs', '#carVal');
    updateServingsValue('#fats', '#fatVal');
}

function updateServingsValue(inputIDString, labelIDString){
    $(inputIDString).val(Math.round((Number($('#serving').val()) * Number($(labelIDString).attr('name'))) * 100 + Number.EPSILON) / 100);
}
</script>

<% } else { %>

    <form action="/food/<%-food.shareID%>/edit" method="get">

        <h1>Nutrition facts for <%= food.name %></h1>
            <p>Serving size : <%= food.servingSize %><%= food.servingSizeUnit %></p>
            <p><strong>Amount per : <%= food.serving %> serving</strong></p>
            <p><strong>Calories </strong><%- food.calories %></p>
            <p><strong>Proteins </strong><%- food.proteins %></p>
            <p><strong>Carbohydrates </strong><%- food.carbs %></p>
            <p><strong>Fats </strong><%- food.fats %></p>
            <h1>Share code : <%= food.shareID %></h1>
        <button name="" type="submit" class="btn btn-primary btn-block">Edit</button>
    
    </form>


<% } %>
